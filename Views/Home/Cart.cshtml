@model List<N16_MilkTea.ViewModels.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    decimal tongTien = ViewBag.TongTien ?? 0;
}

<div class="container py-5">
    <h2 class="mb-4 text-success fw-bold"><i class="bi bi-cart3"></i> Giỏ hàng của bạn</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            <h4>Giỏ hàng đang trống!</h4>
            <a asp-action="Index" class="btn btn-primary mt-3">Quay lại chọn món</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-hover align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/@item.HinhAnh" class="rounded me-3" 
                                                 style="width: 60px; height: 60px; object-fit: cover;"
                                                 onerror="this.src='https://placehold.co/60x60'">
                                            <div>
                                                <h6 class="mb-0 fw-bold">@item.TenDoUong</h6>
                                                <small class="text-muted">Size: @item.TenSize</small>
                                                @if (item.Toppings.Any())
                                                {
                                                    <br />
                                                    <small class="text-success fst-italic">
                                                        + @string.Join(", ", item.Toppings.Select(t => t.TenTopping))
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var giaTopping = item.Toppings.Sum(t => t.Gia);
                                            var donGiaTong = item.DonGia + giaTopping;
                                        }
                                        @donGiaTong.ToString("#,##0") đ
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary rounded-pill px-3">@item.SoLuong</span>
                                    </td>
                                    <td class="fw-bold text-success">
                                        @item.ThanhTien.ToString("#,##0") đ
                                    </td>
                                    <td>
                                        <a asp-action="RemoveFromCart" 
                                           asp-route-MaDoUong="@item.MaDoUong" 
                                           asp-route-MaSize="@item.MaSize"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Xóa món này khỏi giỏ?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Tóm tắt đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <span class="fw-bold">@tongTien.ToString("#,##0") đ</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5">Tổng cộng:</span>
                            <span class="h4 text-danger fw-bold">@tongTien.ToString("#,##0") đ</span>
                        </div>
                        <a href="Checkout" class="btn btn-success w-100 py-2 fw-bold">
                            TIẾN HÀNH THANH TOÁN
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                            Tiếp tục mua hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
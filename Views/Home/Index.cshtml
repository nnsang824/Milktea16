@model IEnumerable<N16_MilkTea.Models.DoUong>

@{
    ViewData["Title"] = "Trang chủ";
    var danhMucs = ViewBag.DanhMucs as List<N16_MilkTea.Models.DanhMuc>;
}

<div class="container mt-4 mb-4">
    <div class="d-flex justify-content-center gap-2 flex-wrap">
        <a asp-action="Index" 
           class="btn @(Context.Request.Query["danhMucId"].Count == 0 ? "btn-success" : "btn-outline-success")">
            Tất cả
        </a>
        
        @if (danhMucs != null)
        {
            foreach (var dm in danhMucs)
            {
                var isActive = Context.Request.Query["danhMucId"] == dm.MaDanhMuc.ToString();
                <a asp-action="Index" asp-route-danhMucId="@dm.MaDanhMuc" 
                   class="btn @(isActive ? "btn-success" : "btn-outline-success")">
                    @dm.TenDanhMuc
                </a>
            }
        }
    </div>
</div>

<div class="container py-3">
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            <i class="bi bi-search"></i> Không tìm thấy sản phẩm nào phù hợp!
            <br>
            <a asp-action="Index" class="btn btn-sm btn-outline-dark mt-2">Xem tất cả menu</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                // Logic tính giá min
                decimal giaMin = 0;
                if (item.DoUongSizes != null && item.DoUongSizes.Any())
                {
                    giaMin = item.DoUongSizes.Min(x => x.Gia);
                }

                <div class="col">
                    <div class="card h-100 shadow-sm border-0 product-card">
                        <div class="position-relative overflow-hidden">
                            <img src="~/images/@item.HinhAnh" class="card-img-top" 
                                 alt="@item.TenDoUong"
                                 style="height: 250px; object-fit: cover; transition: transform 0.3s ease;">
                            
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge bg-warning text-dark">Món ngon</span>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark">@item.TenDoUong</h5>
                            <p class="card-text text-muted small text-truncate">@item.MoTa</p>
                        </div>
                        
                        <div class="card-footer bg-white border-0 pb-3 pt-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-muted small">Giá từ:</span><br>
                                    <span class="h5 text-success fw-bold mb-0">
                                        @giaMin.ToString("#,##0") đ
                                    </span>
                                </div>
                                <a asp-action="Details" asp-route-id="@item.MaDoUong" class="btn btn-outline-success rounded-pill px-3">
                                    <i class="bi bi-cart-plus"></i> Chọn
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* Hiệu ứng zoom nhẹ khi di chuột vào ảnh */
    .product-card:hover .card-img-top {
        transform: scale(1.05);
    }
</style>
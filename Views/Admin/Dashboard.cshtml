<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h2>Thống kê doanh thu</h2>
<canvas id="myChart" style="width:100%;max-width:800px"></canvas>

<script>
    var xValues = @Html.Raw(Json.Serialize(ViewBag.Dates));
    var yValues = @Html.Raw(Json.Serialize(ViewBag.Revenues));

    new Chart("myChart", {
      type: "bar",
      data: {
        labels: xValues,
        datasets: [{
          backgroundColor: "blue",
          data: yValues,
          label: "Doanh thu (VND)"
        }]
      }
    });
</script>
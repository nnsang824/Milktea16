@using N16_MilkTea.Helpers
@using N16_MilkTea.Models
@using N16_MilkTea.Extensions @* THÊM DÒNG NÀY ĐỂ DÙNG GetObject *@
@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trà Sữa N16</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-success fs-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cup-hot-fill"></i> N16 MilkTea
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Menu">Thực đơn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Promotions">Khuyến mãi</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <form class="d-flex" role="search" asp-controller="Home" asp-action="Index" method="get">
                            <div class="input-group">
                                <input class="form-control border-success" type="search" name="query" 
                                       placeholder="Tìm món..." aria-label="Search" 
                                       value="@Context.Request.Query["query"]">
                                <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </form>

                        @{
                            // SỬA 1: Dùng GetObject thay vì Get
                            // SỬA 2: Dùng key "Cart" thay vì "GioHang"
                            var cart = Context.Session.GetObject<List<CartItem>>("Cart");
                            var totalItem = cart != null ? cart.Sum(x => x.Quantity) : 0;
                        }
                        
                        @* SỬA 3: Chuyển hướng về Cart/Index thay vì Home/Cart *@
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-success position-relative">
                            <i class="bi bi-cart3 fs-5"></i>
                            @if(totalItem > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @totalItem
                                </span>
                            }
                        </a>
                        
                        <div class="ms-2">
                            @if (Context.Session.GetString("TenKh") != null)
                            {
                                <div class="dropdown">
                                    <a class="btn btn-outline-success dropdown-toggle d-flex align-items-center gap-1" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-fill"></i> 
                                        <span class="d-none d-md-inline">@Context.Session.GetString("TenKh")</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow">
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Thông tin cá nhân</a></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="History">Lịch sử đơn hàng</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary d-flex align-items-center gap-1">
                                    <i class="bi bi-box-arrow-in-right"></i> <span class="d-none d-md-inline">Đăng nhập</span>
                                </a>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light mt-auto pt-5 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h4 class="text-success fw-bold mb-3">N16 MilkTea</h4>
                    <p>Hương vị trà sữa đậm đà, nguyên liệu tươi ngon mỗi ngày.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light fs-4"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light fs-4"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-light fs-4"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Nhóm 16</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none text-secondary">Giang Tuấn Kiệt - 2001221896</a></li>
                        <li><a href="#" class="text-decoration-none text-secondary">Nguyễn Ngọc Sang - 2001224156</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Liên hệ</h5>
                    <p class="mb-2"><i class="bi bi-geo-alt-fill text-success me-2"></i> 140 Lê Trọng Tấn, Tân Phú</p>
                    <p class="mb-2"><i class="bi bi-telephone-fill text-success me-2"></i> 0901 234 567</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-secondary small">
                &copy; 2025 - N16 MilkTea - Designed by Sang Nguyen
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
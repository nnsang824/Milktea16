@model List<N16_MilkTea.Models.DonHang>
@{ ViewData["Title"] = "Lịch sử mua hàng"; }

<div class="container py-5">
    <h2 class="text-success mb-4"><i class="bi bi-clock-history"></i> Lịch sử đơn hàng</h2>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm">
                <thead class="bg-light">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th>Thanh toán</th>
                        <th>Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><b>#@item.MaDonHang</b></td>
                            <td>@item.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.TinhTrangGiaoHang == 0) { <span class="badge bg-warning text-dark">Chờ xử lý</span> }
                                else if (item.TinhTrangGiaoHang == 1) { <span class="badge bg-info">Đang giao</span> }
                                else { <span class="badge bg-success">Hoàn tất</span> }
                            </td>
                            <td>
                                @if (item.DaThanhToan == true) { <span class="text-success fw-bold"><i class="bi bi-check-circle-fill"></i> Đã TT</span> }
                                else { <span class="text-danger">Chưa TT</span> }
                            </td>
                            <td>
                                @item.ChiTietDonHangs.Sum(c => c.DonGia * c.SoLuong).ToString("#,##0") đ
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào. <a href="/">Mua ngay</a></div>
    }
</div>
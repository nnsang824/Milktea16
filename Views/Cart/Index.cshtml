@using Microsoft.AspNetCore.Http
@model List<N16_MilkTea.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-5">
    <h2>Giỏ hàng của bạn</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model.Count > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên món</th>
                    <th>Hình</th>
                    <th>Giá</th>
                    <th>SL</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>
                            <img src="~/images/@item.ImageUrl" 
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;"
                                 onerror="this.src='https://placehold.co/60x60?text=No+Img'">
                        </td>
                        <td>@item.Price.ToString("#,##0") đ</td>
                        <td>@item.Quantity</td>
                        <td>@item.Total.ToString("#,##0") đ</td>
                        <td>
                            <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-6">
                <form asp-action="ApplyVoucher" method="post" class="input-group mb-3">
                    <input type="text" name="code" class="form-control" placeholder="Nhập mã (VD: MILKTEA50)">
                    <button class="btn btn-outline-primary" type="submit">Áp dụng</button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <h5>Tổng tiền: @ViewBag.Total.ToString("#,##0") đ</h5>
                <h5 class="text-success">Giảm giá: -@ViewBag.Discount.ToString("#,##0") đ</h5>
                <h3>Thanh toán: @ViewBag.FinalTotal.ToString("#,##0") đ</h3>
                
                @if (Context.Session.GetString("MaKh") != null)
                {
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-controller="Payment" asp-action="CheckoutCOD" class="btn btn-info btn-lg text-white">
                            <i class="bi bi-cash-coin"></i> Thanh toán khi nhận hàng
                        </a>

                        <a asp-controller="Payment" asp-action="CreatePaymentUrl" class="btn btn-primary btn-lg">
                            <i class="bi bi-credit-card-2-front"></i> Thanh toán VNPAY
                        </a>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="/Cart/Index" class="btn btn-warning btn-lg mt-3">
                        <i class="bi bi-box-arrow-in-right"></i> Đăng nhập để thanh toán
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Giỏ hàng trống!</div>
        <a href="/" class="btn btn-secondary">Tiếp tục mua sắm</a>
    }
</div>